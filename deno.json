{
  "private": true,
  "name": "Communico",
  "description": "Matrix Homeserver for the rest of us",
  "exports": {
    ".": "./main.ts",
    "./setup": "./setup.ts"
  },
  "tasks": {
    "dev": "deno run --env --allow-net --allow-env --allow-read --watch main.ts",
    "start": "deno --env --allow-net --allow-env --allow-read main.ts",
    "setup": "deno --env --allow-net --allow-env setup.ts",
    "test": "deno test tests/*",
    "db-init": "echo TODO",
    "db-start": "doltgres --config /etc/doltgres/servercfg.d/config.yaml",
    "debug-proxy": "deno --allow-env --allow-net --allow-write utils/proxy.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/collections": "jsr:@std/collections@^1.1.3",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.3",
    "pg": "npm:pg@^8.16.3"
  },
  "workspace": ["./api", "./utils"],
  "fmt": {
    "options": {
      "singleQuote": true
    }
  }
}
